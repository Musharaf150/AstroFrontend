---
import Marked from '../../components/Marked.astro';
import Layout from '../../layouts/Layout.astro';
import fetchApi from '../../lib/strapi';



export async function getStaticPaths({paginate}) {
    try {
        const response = await fetchApi({
            endpoint: 'blogs',
            wrappedByKey: 'data',
           
        });
        const articles = response;
        return articles.length > 0 ? paginate(articles, {pageSize: 2}) : [];
        
    } catch (error) {
        console.error("Error fetching blog articles:", error);
        return [];
    }
}
const {page} = Astro.props;
---

<Layout>
    {page ? (
        <h1>Page: {page.currentPage}</h1>
    <ul id="ul">
        {page.data.map((article)=>(
            <div class="card">
                <a href={`/blog/${article.slug}`}>
                <h1>{article.title}</h1>
                </a>
               
                <Marked content={article.content}/>
            </div>
        ))}
    </ul>
    <div class="pagination">

        {page.url.prev ? <a href={page.url.prev}>Previous Page</a>: null} 
        
        {page.url.next ? <a href={page.url.next}>Next Page</a>: null}
    </div>
    ):
    <div>
        No Data Found!!!
    </div>
    }
    
</Layout>
